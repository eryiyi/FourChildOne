<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/back_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- head开始 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:id="@+id/top_liner"
            android:background="@drawable/top_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/back_white"
                   android:padding="3dp"
                   android:onClick="back"
                   android:layout_height="wrap_content"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="搜索"
                android:visibility="gone"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/sousuo"
                android:padding="3dp"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sousuo_back"
                android:textSize="16sp"
                android:id="@+id/search_editext"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:textSize="18sp"
                  android:text="商品分类"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="50dp"

                        android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/cart_white"
                       android:padding="8dp"
                       android:id="@+id/mine_cart"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="2"
                      android:layout_alignParentRight="true"
                      android:textSize="10dp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:background="@drawable/red_bg"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="热门推荐"
                  android:textSize="14sp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="类目"
                  android:textSize="14sp"
                  android:layout_marginLeft="15dp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
        <ScrollView
                android:id="@+id/tools_scrlllview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:layout_weight="3">
            <LinearLayout
                    android:id="@+id/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"/>
        </ScrollView>
        <android.support.v4.view.ViewPager
                android:id="@+id/goods_pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>