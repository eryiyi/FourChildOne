<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/zhuye_item_select"
              android:layout_height="match_parent">
<TextView android:layout_width="wrap_content"
          android:text="耐克专卖"
          android:padding="15dp"
          android:textColor="@color/textColor"
          android:textSize="18sp"
          android:id="@+id/title"
          android:drawableRight="@drawable/mine_gz_in"
          android:drawablePadding="8dp"
          android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:background="@color/red"
          android:layout_height="0.5dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="7.0折促销"
                  android:id="@+id/zhekou"
                  android:textColor="@color/textColortwo"
                  android:padding="8dp"
                  android:layout_marginLeft="15dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/dateline"
                  android:textColor="@color/textColortwo"
                  android:text="20.15.01.01"
                  android:layout_alignParentRight="true"
                  android:padding="8dp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="100dp">
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:padding="15dp"
                   android:id="@+id/pic1"
                   android:scaleType="centerCrop"
                   android:src="@drawable/head"
                   android:layout_height="wrap_content"/>
        <ImageView
                   android:src="@drawable/head"
                   android:layout_width="0dp"
                   android:padding="15dp"
                   android:id="@+id/pic2"
                   android:scaleType="centerCrop"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <ImageView
                   android:src="@drawable/head"
                   android:layout_width="0dp"
                   android:id="@+id/pic3"
                   android:padding="15dp"
                   android:scaleType="centerCrop"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="6dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="name"
                  android:textSize="15sp"
                  android:visibility="gone"
                  android:textColor="@color/red"
                  android:padding="8dp"
                  android:id="@+id/product_name"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="100￥"
                  android:textSize="14sp"
                  android:textColor="@color/red"
                  android:layout_marginLeft="12sp"
                  android:id="@+id/price_one"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="100￥"
                  android:textSize="13sp"
                  android:textColor="@color/textColortwo"
                  android:id="@+id/price_two"
                  android:layout_marginLeft="6dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="zhima"
                  android:textSize="13sp"
                  android:textColor="@color/textColortwo"
                  android:id="@+id/unit"
                  android:layout_marginLeft="6dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>