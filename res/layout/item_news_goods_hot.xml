<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/zhuye_item_select"
              android:padding="8dp"
              android:layout_height="wrap_content">

        <ImageView android:layout_width="100dp"
                   android:padding="2dp"
                   android:src="@drawable/item_four"
                   android:scaleType="centerCrop"
                   android:id="@+id/item_pic"
                   android:layout_height="100dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="法国原装进口 鹅蛋型新生婴儿床 睡床 睡垫"
              android:layout_toRightOf="@+id/item_pic"
              android:id="@+id/item_title"
              android:layout_marginLeft="6dp"
              android:padding="3dp"
              android:textColor="@color/textColor"
              android:textSize="16sp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="￥99999.00"
              android:layout_marginLeft="6dp"
              android:textSize="18sp"
              android:id="@+id/sell_price"
              android:textStyle="bold"
              android:layout_marginTop="6dp"
              android:layout_toRightOf="@+id/item_pic"
              android:layout_below="@+id/item_title"
              android:textColor="@color/red"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="好评 98% 10860人"
              android:layout_toRightOf="@+id/item_pic"
              android:layout_marginTop="8dp"
              android:id="@+id/price"
              android:layout_marginLeft="8dp"
              android:layout_below="@+id/sell_price"
              android:textSize="12sp"
              android:layout_height="wrap_content"/>

</RelativeLayout>